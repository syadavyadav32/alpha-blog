<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <%= a.label :title %> <br/>
        </div>
        <div class="col-sm-8">
        <%= a.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      
  
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :description %> <br/>
        </div>  
        <div class="col-sm-8">
          <%= a.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
  
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= a.submit class: "btn btn-primary btn-lg" %>
        </div>  
      </div>
 
    <% end %>

      <div class="col-xs-4 col-xs-offset-4">
        [<%= link_to "Cancel request and return to articles listing", articles_path %>]
      </div>
  </div>
</div>