<h1>Create new Article</h1>
<h2> Errors</h2>
<% if @article.errors.any? %>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @article do |a| %>
  <p>
    <%= a.label :title %> <br/>
    <%= a.text_field :title %>
  </p>
  
  <p>
    <%= a.label :description %> <br/>
    <%= a.text_area :description %>
  </p>
  
  <p>
    <%= a.submit %>
  </p>
<% end %>